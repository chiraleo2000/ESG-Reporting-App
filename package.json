{
  "name": "esg-reporting-app",
  "version": "1.0.0",
  "description": "ESG Carbon Accounting & Reporting Tool supporting 6 regulatory standards (EU CBAM, UK CBAM, China Carbon Market, Japan MAFF, Korea K-ESG, Thailand Thai-ESG)",
  "private": true,
  "workspaces": [
    "frontend",
    "backend"
  ],
  "scripts": {
    "dev": "concurrently \"npm run dev:backend\" \"npm run dev:frontend\"",
    "dev:frontend": "npm -w frontend run dev",
    "dev:backend": "npm -w backend run dev",
    "build": "npm run build:frontend && npm run build:backend",
    "build:frontend": "npm -w frontend run build",
    "build:backend": "npm -w backend run build",
    "start": "npm -w backend run start",
    "test": "npm run test:backend && npm run test:frontend",
    "test:backend": "npm -w backend run test",
    "test:frontend": "npm -w frontend run test",
    "lint": "npm run lint:backend && npm run lint:frontend",
    "lint:backend": "npm -w backend run lint",
    "lint:frontend": "npm -w frontend run lint",
    "docker:build": "docker-compose -f docker/docker-compose.yml build",
    "docker:up": "docker-compose -f docker/docker-compose.yml up -d",
    "docker:down": "docker-compose -f docker/docker-compose.yml down",
    "docker:logs": "docker-compose -f docker/docker-compose.yml logs -f",
    "db:migrate": "npm -w backend run migrate",
    "db:seed": "npm -w backend run seed"
  },
  "keywords": [
    "esg",
    "carbon-accounting",
    "ghg-emissions",
    "cbam",
    "sustainability",
    "reporting",
    "scope-1",
    "scope-2",
    "scope-3",
    "cfp",
    "cfo"
  ],
  "author": "",
  "license": "MIT",
  "devDependencies": {
    "concurrently": "^8.2.2"
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=9.0.0"
  }
}
